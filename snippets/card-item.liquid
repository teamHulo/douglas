<div class="item">
    <a href="{{ url }}">
        <div class="img">
            <div class="img__wrapper">
                <img src="{{ img | img_url: 'master' }}" alt="">
            </div>
        </div>
        <div class="content">
            {% if title != blank %}
                <h4>{{ title }}</h4>
            {% endif %}
            {% if text != blank %}
                <p>{{ text }}</p>
            {% endif %}
            {% if btn_text != blank %}
                <span>{{ btn_text }} &#10230;</span>
            {% endif %}
        </div>
    </a>
</div>
{% form 'customer', class: class, id: id %}
  {% render 'form-status', form: form, form_id: id, success_message: success_msg %}

  {%- unless form.posted_successfully? -%}
    <div class="newsletter-form-inner">
      <input
        type="hidden"
        name="contact[tags]"
        value="newsletter">
      <div class="title">
        <h3>
          {{ title }}
        </h3>
      </div>
      <div class="input__wrap">
        <input
          type="email"
          class="my-input"
          name="contact[email]"
          id="{{ id }}-email"
          value="{% if customer.email != blank %}{{ customer.email }}{% endif %}"
          placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
          autocorrect="off"
          autocapitalize="off">
        <button
          type="submit"
          name="commit"
          id="Subscribe"
          class="newsletter-form__button btn btn--primary btn--small btn--medium-ns">
          {% render 'icon-telegram' %}
        </button>
      </div>
      <div class="text">
        <p>
          {{ text }}
        </p>
      </div>
    </div>
  {%- endunless -%}
{% endform %}
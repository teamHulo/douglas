<div class="banner-slider">

  <div class="bg-slider">

    <div class="swiper banner-slider-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="slide__wrap">
              <img src="{{block.settings.img | img_url: 'master'}}" alt="#">
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="container swiper-pagination__wrap">
        <div class="swiper-pagination-body">
          <div class="scroll-btn">
            <a href="#">
              Explore more <br>
              {% render 'icon-arrow-down' %}
            </a>
          </div>
          <div class="swiper-pagination"></div>
        </div>

      </div>

    </div>
  </div>



  <div class="container">
    <div class="banner-slider__wrap">
      <div class="banner-slider-content">
        <div class="big-title">
          <h1>
            {{ section.settings.title }}
          </h1>
        </div>
        <div class="text">
          <p>
            {{ section.settings.text }}
          </p>
        </div>
        <div class="banner-slider-btn">
          <a href="{{section.settings.url}}" class="a-btn secondary">{{ section.settings.btn_name }}</a>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "section-banner-slider",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "title"
      }, {
        "type": "text",
        "id": "text",
        "label": "text"
      }, {
        "type": "url",
        "id": "url",
        "label": "url"
      }, {
        "type": "text",
        "id": "btn_name",
        "label": "btn name"
      }
    ],
    "blocks": [
      {
        "name": "item",
        "type": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "section-banner-slider"
      }
    ]
  }
{% endschema %}
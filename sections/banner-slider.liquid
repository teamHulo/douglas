<div class="banner-slider">

  <div class="bg-slider">

    <div class="swiper banner-slider-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="slide__wrap">
              {% if block.settings.video == true  and block.settings.video_url != blank%}
              <div class="video-banner-bg">
                  <video class="banner-video"  autoplay loop muted playsinline>
                      <source src="{{block.settings.video_url}}" type="video/mp4">
                      Your browser does not support the video tag.
                  </video>
              </div>
            {% else %}
                <img src="{{block.settings.img | img_url: 'master'}}" alt="#">
            {% endif %}
              
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="container swiper-pagination__wrap">
        <div class="swiper-pagination-body">
          <div class="scroll-btn">
            <a href="#">
             
              {% render 'icon-arrow-down' %}
            </a>
          </div>
          <div class="swiper-pagination"></div>
        </div>

      </div>

    </div>
  </div>



  <div class="container">
    <div class="banner-slider__wrap">
      <div class="banner-slider-content">
        <div class="big-title element-animation">
          <h1>
            {{ section.settings.title }}
          </h1>
        </div>
        <div class="text element-animation">
          <p>
            {{ section.settings.text }}
          </p>
        </div>
        <div class="banner-slider-btn element-animation">
          <a href="{{section.settings.url}}" class="a-btn secondary">{{ section.settings.btn_name }}</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
   
    document.addEventListener('DOMContentLoaded', function () {
      let videos = document.querySelectorAll('video');
       video.autoplay = true;
       video.load();
    });
</script>
{% schema %}
  {
    "name": "section-banner-slider",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "title"
      }, {
        "type": "text",
        "id": "text",
        "label": "text"
      }, {
        "type": "url",
        "id": "url",
        "label": "url"
      }, {
        "type": "text",
        "id": "btn_name",
        "label": "btn name"
      }
    ],
    "blocks": [
      {
        "name": "item",
        "type": "item",
        "settings": [
          {
                "type":"checkbox",
                "id":"video",
                "label": "show video",
                "default": false
            },
            {
                "type": "text",
                "id": "video_url",
                "label":"video bg"
            },
          {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "section-banner-slider"
      }
    ]
  }
{% endschema %}
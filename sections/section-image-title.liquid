{% style %}
    .section-image-title{
        position:relative;
        padding:clamp(100px,16.406vw,315px) 0;
        
    }
    .section-image-title .bg{
        position:absolute;
        top:0;
        left:0;
        height:100%;
        width:100%;
        z-index:0;
    }
    .section-image-title .bg img{
        display:block;
        width:100%;
        height:100%;
        object-fit:cover;
    }
    .section-image-title-{{section.id}} h3{
        color: {{section.settings.color}}
    }
    .section-image-title .title{
        margin:0 0 44px 0;
    }
    .section-image-title .title:last-child{
        margin:0;
    }
    .section-image-title .title h3{
        margin:0;
        text-align:center;
    }
    .section-image-title__wrap{
        position:relative;
        z-index:1;
    }
{% endstyle %}

<div class="section-image-title section-image-title-{{section.id}}">
    <div class="bg">
                <img src="{{section.settings.img | img_url: 'master'}}" alt="">
    </div>
    <div class="container">
        <div class="section-image-title__wrap">
            <div class="list-title">
                {% for block in section.blocks %}
                    <div class="title element-animation">
                        <h3>
                            {{block.settings.title}}
                        </h3>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
      "name": "section-image-title",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "image bg"
        },{
          "type": "color",
          "id": "color",
          "label": "color text"
        }
      ],
      "blocks": [
        {
          "name": "item",
          "type": "item",
          "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "title"
            }
          ]
        }
      ],
      "presets": [
        {   
          "name": "section-image-title"
        }
      ]
    }
  {% endschema %}
                            {
                                "value": "center",
                                "label": "Center"
                            },
                            {
                                "value": "right",
                                "label": "Right"
                            }
                        ],
                        "default": "left",
                        "label": "Text align"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Custom column"
            }
        ]
    }
{% endschema %}
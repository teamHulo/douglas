            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 180,
                "step": 2,
                "unit": "px",
                "label": "Section padding top",
                "default": 0
            }, 
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,

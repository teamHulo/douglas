{% style %}
.get-know-{{section.id}}{
    padding:50px 0;
    background: {{ section.settings.bg }};
}

.get-know-{{section.id}} .get-know__wrap > * {
    color:{{section.settings.color}};
}
.get-know-{{section.id}} .get-know__wrap .title{
    margin-bottom:30px; 
    padding:0 20px;
}
.get-know-{{section.id}} .get-know__wrap .title h2{
    text-align: center;
    font-style: normal; /* Стиль шрифта: Обычный */
    font-weight: normal; /* Вес шрифта: Обычный */
    font-variant: normal; /* Вариант шрифта: Обычный */
    font-size: 30px; /* Размер шрифта */
    line-height: 100%; /* Межстрочное расстояние */
    font-family: "Proxima Nova";
    letter-spacing: 1.83px;
    text-transform: uppercase;
}
.get-know-{{section.id}} .text{
    margin-bottom:50px;
    padding:0 20px;
}
.get-know-{{section.id}} .text p{
    text-align: center;
    font-style: normal; /* Стиль шрифта: Обычный */
    font-weight: normal; /* Вес шрифта: Обычный */
    font-stretch: 300; /* Номер шрифта */
    font-size: 16px; /* Размер шрифта */
    line-height: 20px; /* Межстрочное расстояние */
    font-family: "Proxima Nova"; /* Название шрифта */
    color:{{section.settings.color}};
    letter-spacing: 0px;
    margin-bottom:20px;
}
.get-know-{{section.id}} .text p:last-child{
    margin-bottom:0;
}
.get-know-{{section.id}} .text{
    max-width:680px;
    margin:0 auto;
}
.get-know-{{section.id}} .container{
    max-width:2000px;
    padding:0;
}
.get-know-{{section.id}} .image-list {
    display:flex;
    flex-wrap:wrap;
    align-items:center;
}
.get-know-{{section.id}} .image-list .image{
    width:50%;
}
.get-know-{{section.id}} .image-list .image img{
    display:block;
    width:100%;
    height:100%;

}
{% endstyle %}

<div class="get-know get-know-{{section.id}}">
    <div class="container">
        <div class="get-know__wrap">
            <div class="title element-animation">
                <h2>
                    {{section.settings.title}}
                </h2>
            </div>
            <div class="text element-animation">
                {{section.settings.text}}
            </div>
            <div class="image-list animate-left">
                {% for block in section.blocks %}
                    <div class="image element-animation">
                        <img src="{{block.settings.img |img_url: 'master'}}" alt="">
                    </div>
                {% endfor %}
            </div>
            
        </div>
    </div>
</div>

{% schema %}
    {
      "name": "new section image text",
      "settings": [
        {
          "type": "color",
          "id": "bg",
          "label": "background",
          "default": "#212121"
        },
        {
          "type": "color",
          "id": "color",
          "label": "color text",
          "default": "#FFFFFF"
        },
        {
          "type": "text",
          "id": "title",
          "label": "title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "text"
        }
      ],
      "blocks": [
        {
          "name": "image",
          "type": "item",
          "settings": [
            {
              "type": "image_picker",
              "id": "img",
              "label": "image"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "section get know"
        }
      ]
    }
  {% endschema %}
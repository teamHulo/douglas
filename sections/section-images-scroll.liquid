<style>
#shopify-section-{{ section.id }} .scroll-image {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
#shopify-section-{{ section.id }} .name span {
    padding-bottom: {{ section.settings.name_padding_bottom }}px;
}
#shopify-section-{{ section.id }} .scroll-image__img {
    display:flex;
    justify-content: space-between;
    width:max-content;
    animation: marquee-img 15s linear infinite;
    min-width: 200%;
    column-gap: {{ section.settings.column_gap }}px;
}
#shopify-section-{{ section.id }} .scroll-image__img img {
    object-fit: contain;
    white-space: nowrap;
    width: 100%;
    flex: 1 1 100%;
    height: 150px;
}
@keyframes marquee-img {
    0%{
        transform: translateX(0%);
    }
    100%{
        transform: translateX(-50%);
    }
}
</style>
<div class="scroll-image">
    <div class="scroll-image__wrapper">
        <div class="name">
            <span>
              {{ section.settings.name }}
            </span>
          </div>
        <div class="scroll-image__img">
            {% for block in section.blocks %}
                <img src="{{ block.settings.img | img_url: 'master' }}" alt="">
            {% endfor %}
            {% for block in section.blocks %}
                <img src="{{ block.settings.img | img_url: 'master' }}" alt="">
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Image scroll",
        "settings": [
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 180,
                "step": 2,
                "unit": "px",
                "label": "Section padding top",
                "default": 0
            }, 
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 180,
                "step": 2,
                "unit": "px",
                "label": "Section padding bottom",
                "default": 0
            },
            {
                "type": "text",
                "id": "name",
                "label": "Section name",
                "default": "As seen in"
            },
            {
                "type": "range",
                "id": "name_padding_bottom",
                "min": 0,
                "max": 180,
                "step": 2,
                "unit": "px",
                "label": "Name padding bottom",
                "default": 0
            }, 
            {
                "type": "range",
                "id": "column_gap",
                "min": 0,
                "max": 100,
                "step": 2,
                "unit": "px",
                "label": "Column gap",
                "default": 0
            }
        ],
        "blocks": [
            {
                "name": "Image",
                "type": "image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "img",
                        "label": "Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image scroll"
            }
        ]
    }
{% endschema %}
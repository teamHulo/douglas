.image-text__img {
  width: 100%;
}
.image-text__img img {
  width: 100%;
  height: auto;
  display: block;
}
.image-text__text {
  width: 100%;
  display: flex;
}
.image-text__text h1 {
  font-size: var(--font-size-82);
  line-height: 110%;
}
.image-text__text h2 {
  font-size: var(--font-size-72);
  line-height: 110%;
}
.image-text__text h3 {
  font-size: var(--font-size-62);
  line-height: 110%;
}
.image-text__text h4 {
  font-size: var(--font-size-52);
  line-height: 110%;
}
.image-text__text h5 {
  font-size: var(--font-size-42);
  line-height: 110%;
}
.image-text__text h6 {
  font-size: var(--font-size-24);
  line-height: 110%;
}
.image-text__text p {
  font-size: var(--font-size-24);
  line-height: 140%;
}

@media(max-width: 767px) {
  .image-text__wrapper {
    flex-wrap: wrap;
  }
  .image-text__text {
    padding: 0 !important;
  }
}